{
  "extends": ["config:base"],
  "labels": ["dependencies"],
  "packageRules": [
    {
      "matchUpdateTypes": ["minor","patch"],
      "automerge": true,
      "groupName": "minor-and-patch-updates"
    },
    {
      "matchUpdateTypes": ["major"],
      "automerge": false,
      "separateMajorReleases": true,
      "groupName": "major-updates"
    }
  ]
}
